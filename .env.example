# Signal Configuration
SIGNAL_NUMBER="+1234567890"
SIGNAL_API_URL="http://localhost:8080"

# Discord Configuration
DISCORD_CHANNEL_ID=
DISCORD_BOT_TOKEN="your-bot-token-here"

# Ollama Configuration
OLLAMA_API_URL="http://host.docker.internal:11434"
OLLAMA_FOREGROUND_MODEL="gpt-oss:20b"  # Fast model for user-facing messages
OLLAMA_BACKGROUND_MODEL="nemotron-3-nano:30b"  # Slower/smarter model for background tasks

# Perplexity Configuration
PERPLEXITY_API_KEY="pplx-your-api-key-here"

# Database
DB_PATH="/penny/data/penny.db"

# Logging
LOG_LEVEL="INFO"
# LOG_FILE="/penny/data/penny.log"  # Optional: Log to file in addition to console

# Agent Team (pm/worker containers â€” leave blank to disable)
# Run `claude setup-token` to get a long-lived OAuth token (uses Max plan)
CLAUDE_CODE_OAUTH_TOKEN=
GITHUB_APP_ID=
GITHUB_APP_PRIVATE_KEY_PATH="data/github-app.pem"
GITHUB_APP_INSTALLATION_ID=

